{
  "name": "order",
  "version": "1.0.0",
  "main": "index.js",
  "author": "ash1vt",
  "license": "MIT",
  "scripts": {
    "env:dev": "dotenv -e ./env/.env.dev",
    "env:test": "dotenv -e ./env/.env.test",

    "build": "tsc && yarn build:paths",
    "build:paths": "tscpaths -p tsconfig.json -s . -o dist",

    "watch": "tsc-watch --onSuccess \"yarn build:paths\"",

    "start": "node ./dist/src/index.js",
    "start:dev": "yarn env:dev \"nodemon --inspect ./dist/src/index.js\"",

    "test": "yarn env:test \"node ./dist/tests/index.js\"",
    
    "migrate:dev": "yarn env:dev \"prisma migrate dev\"",
    "migrate:test": "yarn env:test \"prisma migrate dev\"",
    
    "admin:dev": "yarn env:dev \"prisma studio\""
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@prisma/client": "^5.8.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.8.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tscpaths": "^0.0.9",
    "typescript": "^5.3.3"
  }
}
