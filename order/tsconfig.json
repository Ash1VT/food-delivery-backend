{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": "./",
        "resolveJsonModule": true,
        "paths": {
            "@src/*": ["src/*"],
            "@tests/*": ["tests/*"],
            "@/*": ["./*"]
        },
        "outDir": "./dist",                            
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}